<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_agendar"
    tools:context="com.pbtec.app.barbeariaclub.fragments.AgendarHorario"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/srollview2"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_scrollview"
            android:layout_height="match_parent" >

            <android.support.v7.widget.CardView
                android:id="@+id/card_view5"
                card_view:cardElevation="3dp"
                card_view:contentPaddingBottom="15dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="15dp"
                        android:gravity="left|center_vertical"
                        android:id="@+id/qual_barbeiro"
                        android:textColor="@color/colorAccent"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:text="QUAL BARBEIRO?"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/relativeLayout"
                        android:layout_below="@+id/qual_barbeiro"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/foto2"
                            android:layout_marginStart="20dp"
                            android:id="@+id/imagem1" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/foto2"
                            android:id="@+id/imagem2"
                            android:layout_marginRight="40dp"
                            android:layout_marginLeft="40dp"
                            android:layout_toRightOf="@+id/imagem1"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/foto2"
                            android:id="@+id/imagem3"
                            android:layout_toRightOf="@+id/imagem2"/>

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/radiogroup"
                            android:layout_below="@+id/imagem1">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Henrique"
                                android:id="@+id/radioButton" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rafael"
                                android:id="@+id/radioButton2"
                                android:layout_marginRight="20dp"
                                android:layout_marginLeft="20dp" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fernando"
                                android:id="@+id/radioButton3" />

                        </RadioGroup>
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view6"
            card_view:contentPaddingBottom="15dp"
            android:layout_marginTop="@dimen/espaco_entre_cardview"
            android:paddingTop="10dp"
            card_view:cardElevation="3dp"
            android:layout_below="@+id/card_view5"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quando"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="QUANDO?"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/linear_quando"
                    android:weightSum="2"
                    android:layout_below="@+id/quando">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:id="@+id/selecionar_data"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/selecionar_hora"
                        android:text="08 : 00"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view7"
            android:layout_marginTop="@dimen/espaco_entre_cardview"
            card_view:contentPaddingBottom="15dp"
            card_view:cardElevation="3dp"
            android:layout_below="@+id/card_view6"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/qual_servico"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="QUAL SERVIÃ‡O?"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/spinner"
                    android:layout_below="@+id/qual_servico"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/confirmar_agendamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/style_button"
                android:textColor="@color/branco"
                android:text="AGENDAR"
                android:layout_marginTop="6dp"
                android:layout_below="@id/card_view7"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
