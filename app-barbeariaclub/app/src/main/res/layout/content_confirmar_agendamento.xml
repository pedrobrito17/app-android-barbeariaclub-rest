<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pbtec.app.barbeariaclub.dialogs.ConfirmarAgendamento">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barbeiro: "
        android:id="@+id/barbeiro"
        android:textSize="16dp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data: "
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/data"
        android:textSize="16dp"
        android:layout_below="@+id/barbeiro"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horário: "
        android:layout_marginBottom="15dp"
        android:id="@+id/hora"
        android:textSize="16dp"
        android:layout_below="@+id/data"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serviço"
        android:textSize="16dp"
        android:id="@+id/servico"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/hora"
        android:textColor="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/servico">

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:textColor="@color/branco"
            android:id="@+id/cancelar_ag"
            android:text="Cancelar"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:id="@+id/confirmar_ag"
            android:background="@color/colorAccent"
            android:textColor="@color/branco"
            android:text="Confirmar"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    



</RelativeLayout>
