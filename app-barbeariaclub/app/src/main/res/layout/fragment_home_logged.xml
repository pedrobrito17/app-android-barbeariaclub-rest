<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pbtec.app.barbeariaclub.fragments.HomeLogged"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/scroll_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center"
        android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
    
            <android.support.v7.widget.CardView
                android:id="@+id/card_view9"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                card_view:cardElevation="3dp"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">


                    <ImageView
                        android:id="@+id/imagem_logo"
                        android:layout_width="300dp"
                        android:layout_height="230dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo_barbeariaclub"/>

                    <WebView
                        android:id="@+id/web_view2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/foto_club"
                        android:layout_below="@+id/imagem_logo"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/agendar_horario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/style_button"
            android:textColor="@color/branco"
            android:text="AGENDAR ATENDIMENTO"
            android:layout_marginTop="6dp"
            android:layout_below="@id/card_view9"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        </RelativeLayout>
    </ScrollView>



</FrameLayout>
